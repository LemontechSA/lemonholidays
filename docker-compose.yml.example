version: "3"
services:
  database:
    container_name: "holidays-db"
    image: "mongo"
    ports:
      - 27017:27017
    environment:
      MONGO_INITDB_DATABASE: holidays
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: secret
    volumes:
      - db:/data/db

volumes:
  db:
    driver: local
